@using NhaDat24h.DataDto.User;
@model GetHrReportData;

@if (Model != null && Model.Value.Count > 0)
{
    int i = Model.i;

    @foreach (var item in Model.Value)
    {
        <tr style="white-space: nowrap;">
            <td style="text-align:center;">@i</td>
            <td style="text-align:center;">@item.Id</td>
            <td style="text-align:center;">@item.ReferralCode</td>
            <td style="text-transform:capitalize;">@item.FullName</td>
            <td style="white-space:normal; width:180px;">@item.Position</td>
            <td style="white-space:normal; width:270px;">@item.Department</td>
            <td style="width:120px;">@item.Company</td>
            <td>@item.DateOfBirth</td>
            <td>@item.Sex</td>
            <td style="width:135px;">@item.NumberId</td>
            <td style="width:120px;">@item.Mobile</td>
            <td>@item.Email</td>
        </tr>
        i++;
    }

    if (i<Model.Value.FirstOrDefault().Total)
    {
        <tr>
            <th colspan="12" class="text-center">
                <input type="hidden" value="2" id="curentIndex_@Model.Key.IdCompany">
                <button id="btnloadmore_@Model.Key.IdCompany" onclick="LoadmoreNhansu('@Model.Key.IdCompany')"
                class="border-none primary-bg p-x-15 p-y-10 round-10 text-white">
                    Xem thêm
                </button>
            </th>
        </tr>
    }
    else
    {
        <tr style="white-space: nowrap;">
            <td style="text-align:center;">Tổng</td>
            <td style="text-align:center;">@Model.Value.FirstOrDefault().Total</td>

        </tr>
    }
}


