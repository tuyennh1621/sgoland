@using NhaDat24h.DataDto.User;
@model HrReportSynthesisModel;

<h3 class="text-center">Báo cáo tổng hợp nhân sự hệ thống</h3>
<h4 class="text-center">Từ @Model.StartDate.ToString("dd/MM/yyyy") Đến @Model.EndDate.ToString("dd/MM/yyyy")</h4>

<table class="table table-bordered table-234 mt-20">
    <thead>
        <tr style="white-space: nowrap;">
            <th>STT</th>
            <th>Đơn vị / Công ty</th>
            <th>Phòng ban</th>
            <th>Số lượng nhân sự hiện tại</th>
            <th>Số lượng nhân sự tăng mới</th>
            <th>Số lượng nhân sự giảm</th>
            <th>Ghi chú</th>
        </tr>

        
    </thead>

    <tr>TONG</tr>


    @foreach (var key in Model.data.Select(x => x.Key))
    {
        @if (Model.data.Where(x => x.Key == key).SingleOrDefault().Value.Count > 0)
        {
            <tr class="table-primary" style="border: 1px solid var(--bs-border-color) !important;">
                <th style="border:none !important; font-size:18px;" colspan="7">@key.Company</th>
            </tr>
            <tbody id="loadmorecontent_@key.IdCompany">
                @await Html.PartialAsync("~/Areas/Partner/Views/Statistics/ExportSummaryListUserReportLoadMoreCompanyPartial.cshtml",Model.data.Where(x => x.Key==key).SingleOrDefault())
            </tbody>

        }
    }
</table>






