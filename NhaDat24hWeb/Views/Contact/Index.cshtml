@using NhaDat24h.Common.Configuration;
<div>
    <!-- ============================ Page Title Start================================== -->
    <div class="page-title" style="background:#f4f4f4 url(https://images.unsplash.com/photo-1565402170291-8491f14678db?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2017&q=80);" data-overlay="5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="breadcrumbs-wrap">
                        <h2 class="breadcrumb-title uppercase text-center">Liên hệ</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================ Page Title End ================================== -->
    <!-- ============================ Agency List Start ================================== -->
    <section class="gray-simple">
        <div class="container">
            <!-- row Start -->
            <div class="row">
                <div class="col-lg-8 col-md-7">
                    <h4 class="type--initial mb-10">
                        Chúng tôi luôn lắng nghe ý kiến của bạn. Hãy để lại tin nhắn!
                    </h4>
                    <div class="property_block_wrap style-2">
                        <div class="block-body mt-30">
                            <form class="form-simple" id="ContactForm">
                                <div class="row">
                                    <div class="col-lg-6 col-md-12">
                                        <div class="form-group">
                                            <label>Họ và tên</label>
                                            <input type="text" name="fullname" class="form-control simple">
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-12">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="email" name="email" data-msg-email="Email không hợp lệ" class="form-control simple">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Điện thoại</label>
                                    <input type="text" name="phone" data-msg-number="Số điện thoại không hợp lệ" class="form-control simple">
                                </div>

                                <div class="form-group">
                                    <label>Tiêu đề</label>
                                    <input type="text" name="caption" class="form-control simple">
                                </div>

                                <div class="form-group">
                                    <label>Tin nhắn</label>
                                    <textarea class="form-control simple"></textarea>
                                </div>

                                <div class="form-group">
                                    <button class="btn bg-primary2 text-white" type="submit">Gửi ngay</button>
                                </div>
                            </form>
                        </div>

                    </div>

                </div>

                <div class="col-lg-4 col-md-5">

                    <div class="contact-box">
                        <i class="fa-solid fa-location-dot"></i>
                        <h4>Trụ sở chính</h4>
                        <p>@AppConfigs.Address</p>
                    </div>

                    <div class="contact-box">
                        <i class="fa-regular fa-envelope"></i>
                        <p>Email: @AppConfigs.Email</p>
                        <span>Hotline: @AppConfigs.Hotline</span>
                    </div>

                </div>

            </div>
            <!-- /row -->

        </div>

    </section>
    <!-- ============================ Agency List End ================================== -->
    <!-- ============================ Maps ================================== -->
    <div id="contact-us" class="contact-us">
        <div class="container-fluid">
            <div class="contact-maps">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12531.104389413631!2d105.7598248084085!3d20.97179789940518!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x313453058704bfeb%3A0x30c3fe30178cc13f!2zSGFpIFBoYXQgTGFuZCAtIEPDtG5nIHR5IEPhu5UgcGjhuqduIMSQ4bqndSB0xrAgdsOgIEtpbmggZG9hbmggQuG6pXQgxJHhu5luZyBz4bqjbiBI4bqjaSBQaMOhdA!5e0!3m2!1svi!2s!4v1573517435650!5m2!1svi!2s" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>
    </div>
</div>

