<div class="modal fade" id="form_register" tabindex="-1" aria-labelledby="form_register" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title text-16 uppercase" id="form_register">
                    Để được liên hệ sớm nhất hãy ứng tuyển tại đây!
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="FormRegister" class="form-simple needs-validation" enctype="multipart/form-data" novalidate>
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <div class="form-group">
                                <label>Họ và tên</label>
                                <input type="text" placeholder="Họ và tên" class="form-control simple">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" placeholder="Email" class="form-control simple">
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label>Số điện thoại</label>
                                <input type="text" placeholder="Số điện thoại" class="form-control simple">
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label>Vị trí ứng tuyển</label>
                                <input type="text" placeholder="Vị trí ứng tuyển" class="form-control simple">
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label>Giới thiệu bản thân</label>
                                <textarea class="form-control" rows="3" placeholder="Giới thiệu bản thân"></textarea>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label>Hồ sơ đính kèm</label>
                                <div class="form-group btn-upload2">
                                    <label for="avatar" data-id="avatar" class="change-image">Upload File</label>
                                    <input class="upload__inputfile" id="avatar" style="display:none;" data-id="avatar" type="file" name="AvtEdit">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group buttons1">
